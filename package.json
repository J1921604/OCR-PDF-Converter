{
  "name": "ocr-pdf-converter",
  "version": "1.0.0",
  "description": "スキャンPDFをOCR処理して検索可能PDFに変換するWebアプリケーション",
  "scripts": {
    "start": "webpack serve --mode development",
    "start:backend": ".\\.venv\\Scripts\\python.exe backend\\app.py",
    "dev": "concurrently -k -s first -n BACKEND,FRONTEND \"npm run start:backend\" \"npm run start\"",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:test": "start-server-and-test \"npm run dev\" http://localhost:8080 \"wait-on http-get://localhost:5000/api/health && cypress run\"",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:fix": "eslint src/**/*.{js,jsx} --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css,md}\"",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "OCR",
    "PDF",
    "検索可能PDF",
    "OnnxOCR",
    "PaddleOCR",
    "Python",
    "Flask"
  ],
  "author": "J1921604",
  "license": "MIT",
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.0.379",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^6.8.1",
    "cypress": "^13.6.0",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2",
    "gh-pages": "^6.1.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "start-server-and-test": "^2.1.3",
    "style-loader": "^3.3.4",
    "wait-on": "^9.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
